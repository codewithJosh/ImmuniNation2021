<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:outlineAmbientShadowColor="?attr/colorPrimary"
    android:outlineSpotShadowColor="?attr/colorPrimary"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/iv_vaccine_image"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/iv_vaccine_image">

            <TextView
                android:id="@+id/tv_vaccine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_vaccine_first_dose_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_vaccine_name" />

            <TextView
                android:id="@+id/tv_vaccine_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_vaccine_first_dose_date" />

            <TextView
                android:id="@+id/tv_vaccine_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_vaccine_site" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>